{{#partial "content"}}

    {{#if editPost}}

        <form action ="/authors/{{authors.id}}/posts/{{editPost.id}}/update" method ="post">
            <label for="editcontent">Edit Content</label>
            <input id ="editcontent" name="editcontent" type="text">
            <button type="submit" class="btn btn-default">Go!</button>
        </form>

    {{else}}
        <form action ="/authors/{{authors.id}}/posts/new" method ="post">
            <label for="content">Content</label>
            <input id ="content" name="content" type="text">
            <button type="submit" class="btn btn-default">Go!</button>
        </form>
    {{/if}}


{{/partial}}

{{> layout.hbs}}