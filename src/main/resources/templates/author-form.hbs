{{#partial "content"}}


{{#if editAuthor}}

    <form action ="/authors/update/{{editAuthor.id}}" method ="post">
        <label for="editAuthor">Edit Author Name</label>
        <input id ="editAuthor" name="editAuthor" type="text">
        <button type="submit" class="btn btn-default">Go!</button>
    </form>

   {{else}}

    <h1>Add a new Author</h1>
    <form action="/authors/new" method="post">
        <label for="name">Author Name</label>
        <input id="name" name="name" type="text">
        <button type="submit" class="btn btn-default">Go!</button>
    </form>

    {{/if}}

{{/partial}}

{{> layout.hbs}}